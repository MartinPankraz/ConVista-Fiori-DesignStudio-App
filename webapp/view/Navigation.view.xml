<mvc:View controllerName="convista.com.arp.demo.controller.Navigation" xmlns:html="http://www.w3.org/1999/xhtml"  xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt" height="100%" class="sapUiSizeCompact">
	<App id="app" class="ccBG"><!-- id="app" left out intentionally for bug tracking purpose-->
		<pages>
			<Page 
				  id="homePage"
				  showHeader="false"
				  title="{i18n>title}"
				  showNavButton="true"
				  enableScrolling="false">
				<content>
					<Bar 
						id="idHeaderBar"
						class="ccMBar"
						design="SubHeader">
						<contentLeft>
							<IconTabBar
								id="idIconTabBarFiori1"
								upperCase="true"
								showOverflowSelectList="true"
								class="sapUiResponsiveContentPadding"
								select="handleIconTabBarSelect">
							</IconTabBar>
						</contentLeft>
						<contentRight>
							<l:VerticalLayout id="layout_vertical_clock" class="sapUiSmallMargin">
								<core:Icon src="sap-icon://favorite"
									color="yellow"
									width="50px"
									height="50px"
									class="roundedIcons"
									press="onUserImagePressed"/>
								<Text id="username" text="{userapi>/firstName}, {userapi>/lastName}"/>
								<Text id="clock1" text="KÃ¶ln 11:11 am"/>
							</l:VerticalLayout>
						</contentRight>
					</Bar>
					<l:HorizontalLayout id="layout_horizontal_sideNav" >
			            <tnt:NavigationList id="navigationList"
			            					itemSelect="onNavListItemSelect"
			            					expanded="true">
			                <tnt:NavigationListItem
			                        key="{key}"
			                        text="{text}"
			                        icon="{icon}">
			                </tnt:NavigationListItem>
		                </tnt:NavigationList>
		                <NavContainer
							id="myNavCon"
							width="100%"
							height="100%">
		                	<Page
								id="home_landing"
								title="Home Page"
								showHeader="true"
								showSubHeader="true"
								class="myPageOverflow"
								showNavButton="false">
		                		<headerContent>
		                			<Button icon="sap-icon://refresh"
		                					press="handleHomeHtmlRefresh"/>
		                		</headerContent>
		                		<subHeader>
		                			<OverflowToolbar>
		                				<Text text="Acc Basis:"/>
		                				<Select
											forceSelection="true"
											selectedKey="gaap"
											width="150px">
											<core:Item key="gaap" text="US GAAP" />
										</Select>
		                				<Text text="Company:"/>
		                				<MultiInput id="multiInput2" valueHelpRequest="onSelectionScreenRequest" width="200px"/>
		                				<Text text="Position Date:"/>
		                				<DateRangeSelection id="drs" change="handleDateChange" width="150px"/>
		                				<RadioButton groupName="GroupA" text="daily" selected="true" />
										<RadioButton groupName="GroupA" text="periodic" />
										<ToolbarSeparator />
		                				<Text text="Security Account:"/>
		                				<MultiInput id="multiInput4" valueHelpRequest="onSelectionScreenRequest" width="200px"/>
		                				<Button type="Accept" text="Coming Soon" press="onPress" enabled="false"/>
		                			</OverflowToolbar>
		                		</subHeader>
							    <core:HTML id="home_landing_html"/>
							</Page>
		                </NavContainer>
					</l:HorizontalLayout>
				</content>
				<footer>
					<OverflowToolbar id="footerBar">
						<Text id="companyText" class="sapUiSmallMarginBeginEnd" text="2017 ConVista Consulting AG"/>
						<ToolbarSeparator />
						<Link id="contactUs" class="sapUiSmallMarginBeginEnd" text="Contact Us" press="onContactUsClicked"/>
						<ToolbarSeparator />
						<Image press="onTwitterIconPressed" src="data:image/png;base64,"></Image>
						<Image press="onFacebookIconPressed" src="data:image/png;base64,"></Image>
						<Image press="onLinkedInIconPressed" src="data:image/png;base64,"></Image>
						<ToolbarSpacer />
					</OverflowToolbar>
				</footer>	
			</Page>
		</pages>
	</App>
</mvc:View>